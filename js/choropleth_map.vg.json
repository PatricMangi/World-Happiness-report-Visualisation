{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Percentage of populations in the USA that identify as black (2018).",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/PatricMangi/DATA-VISUALISATION-2/main/js/ne_110m_admin_1_states_provinces.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
  },
  "transform": [{
      "lookup": "properties.name_it",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/PatricMangi/DATA-VISUALISATION-2/main/data/shootings.csv"
        },
        "key": "State",
        "fields": ["Percent_Black"]
       
      }
    }
   
  ],

 "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Percent_Black",
      "type": "quantitative",
       "scale": {"domain": [0, 50]
      
    }
  }

}
}
